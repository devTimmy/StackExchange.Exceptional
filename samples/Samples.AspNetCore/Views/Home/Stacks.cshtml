@{
    ViewData["Title"] = "Stack Test";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h4>Throw an exception with the below stack (for highlighting testing).</h4>
        <form asp-controller="Home" asp-action="Stacks">
            <textarea name="details" placeholder="Enter your Stack Trace here" style="width: 100%; height: 300px;"></textarea>
            <br/>
            <button>Throw an error!</button>
        </form>
    </div>
    <div class="col-md-1"></div>
</div>
